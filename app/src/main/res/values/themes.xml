<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorOnPrimary">@color/darkGray</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="itemRippleColor">@color/bottom_navigation_ripple_color</item>
        <item name="itemTextAppearanceActive">@style/ActiveItemBottomNavigationTextAppearence</item>
    </style>

    <style name="ActiveItemBottomNavigationTextAppearence" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MenuItemStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="fontFamily">?attr/textAppearanceBody1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.TMovies.FullListActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:popupBackground">@drawable/bg_spinner</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="tabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="selectedTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#24ffffff</item>
    </style>

</resources>